{% extends "layout.twig" %}

{% block title %}Sing Up{% endblock %}

{% block content %}
    <form action="/signUp" method="POST">
        <input type="text" name="login" value="" placeholder="Login">
        {% if errors.login %}
        <span style="color: red">{{ errors.login }}</span>
        {% endif %}
        <input type="password" name="password" value="" placeholder="Password">
        {% if errors.password %}
            <span style="color: red">{{ errors.password }}</span>
        {% endif %}
        <input type="password" name="passwordRepeat" value="" placeholder="Repeat password">
        {% if errors.passwordRepeat %}
            <span style="color: red">{{ errors.passwordRepeat }}</span>
        {% endif %}
        <button type="submit">Sing In</button>
    </form>
{% endblock %}